<project>

    <target name="compile">
        <mkdir dir="./build/classes"/>
        <javac srcdir="./" destdir="./build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="./build/jar"/>
        <jar destfile="build/jar/first.jar" basedir="./build/classes">
            <manifest>
                <attribute name="Main-Class" value="first"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="./build/jar/HelloWorld.jar" fork="true"/>
    </target>

</project>