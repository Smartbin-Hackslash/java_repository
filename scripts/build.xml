<project>

    <target name="compile">
        <mkdir dir="./build/classes"/>
        <javac srcdir="./" destdir="./build/classes"/>
            <echo>compiling jar files!</echo>
    </target>

    <target name="jar">
        <mkdir dir="./build/jar"/>
        <echo>building jar files!</echo>
        <jar destfile="build/jar/first.jar" basedir="./build/classes">
            <manifest>
                <attribute name="Main-Class" value="first"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="./build/jar/first.jar" fork="true"/>
        <echo>running jar files!</echo>
    </target>

</project>